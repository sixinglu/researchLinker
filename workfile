      <name>S. Wesch</name>
    </author>
    <author>
      <name>M. V. Yurkov</name>
    </author>
    <arxiv:doi xmlns:arxiv="http://arxiv.org/schemas/atom">10.1103/PhysRevSTAB.15.030707</arxiv:doi>
    <link title="doi" href="http://dx.doi.org/10.1103/PhysRevSTAB.15.030707" rel="related"/>
