    <arxiv:doi xmlns:arxiv="http://arxiv.org/schemas/atom">10.1209/epl/i2001-00367-8</arxiv:doi>
    <link title="doi" href="http://dx.doi.org/10.1209/epl/i2001-00367-8" rel="related"/>
