    <arxiv:comment xmlns:arxiv="http://arxiv.org/schemas/atom">New J. Phys., accepted</arxiv:comment>
    <arxiv:journal_ref xmlns:arxiv="http://arxiv.org/schemas/atom">New J. Phys. 17 (2015) 053046</arxiv:journal_ref>
    <link href="http://arxiv.org/abs/1402.6875v2" rel="alternate" type="text/html"/>
